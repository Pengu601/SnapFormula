{
  "manifest_version": 3,
  "name": "Screen Capture Extension",
  "version": "1.0",
  "description": "Take screenshots of your current screen",
  "permissions": [
    "tabs", 
    "activeTab", 
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
