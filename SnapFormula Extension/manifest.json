{
  "manifest_version": 3,
  "name": "Snipping Tool",
  "version": "1.0",
  "description": "An extension that turns your images of functions into usuable text to paste into other applications",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "scripting",
    "storage",
    "unlimitedStorage",
    "browsingData",
    "notifications",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "Pop_Up.html",
    "default_icon": {
      "128": "icons/logo1.png"
    }
  },
  "commands": {
    "takeScreenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Take screenshot of tab"
    }

  },
  
  "host_permissions": [
    "<all_urls>"
  ]

}
