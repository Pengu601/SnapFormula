{
  "manifest_version": 3,
  "name": "Snipping Tool",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "scripting",
    "storage",
    "unlimitedStorage",
    "browsingData",
    "notifications",
    
    "https://*/*",
    "file://*/*",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "Pop_Up.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
